<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="12dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/leads_company"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Accolite"
            android:layout_marginLeft="12dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/leads_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="22/4/17"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/leads_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="8:00 PM"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="12dp">


        <ImageView
            android:id="@+id/leads_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/info_icon"
            android:layout_height="wrap_content"
            android:text="Accolite"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/leads_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/phone"
            android:layout_height="wrap_content"
            android:text="Accolite"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/leads_sms"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/chat"
            android:layout_height="wrap_content"
            android:text="Accolite"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/leads_email"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/gmail"
            android:layout_height="wrap_content"
            android:text="Accolite"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/grey"/>

</LinearLayout>